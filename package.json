{
  "name": "ev-dashboard",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "jest": {
    "verbose": true,
    "testEnvironment": "jest-environment-jsdom",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transform": {
      ".+\\.(css|scss|png|jpg|svg)$": "jest-transform-stub",
      "^.+\\.[tj]sx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/assetsTransformer.ts",
      "\\.(css|less)$": "<rootDir>/assetsTransformer.ts",
      "^~/(.*)$": "<rootDir>/src/$1",
      "\\.(gif|ttf|eot|svg|png)$": "<rootDir>/__ mocks __/fileMock.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!variables/.*|react-leaflet/)"
    ]
  },
  "scripts": {
    "dev": "vite",
    "test": "jest",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prettier": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "execute-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "dependencies": {
    "antd": "^5.9.4",
    "axios": "^1.5.1",
    "easy-bem": "^1.1.1",
    "mobx": "^6.10.2",
    "mobx-react-lite": "^4.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "react-test-renderer": "^18.2.0",
    "sass": "^1.68.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts?(x)": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": "prettier --write"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.23.0",
    "@babel/plugin-syntax-jsx": "^7.22.5",
    "@babel/plugin-transform-class-properties": "^7.22.5",
    "@babel/plugin-transform-private-property-in-object": "^7.22.11",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.0",
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.27",
    "@types/react-dom": "^18.2.12",
    "@types/react-test-renderer": "^18.0.3",
    "@types/redux-mock-store": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "global-jsdom": "^9.1.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.5",
    "vite-tsconfig-paths": "^4.2.1"
  }
}
